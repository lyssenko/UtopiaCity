@model List<UtopiaCity.Models.PublicCatering.Restaurant>

@{
    ViewBag.Title = "Рестораны нашего города.";
    Layout = "_Layout";
}

@if (Model.Count == 0)
{
    <h2>Список пуст</h2>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>
                "Name"
            </th>
            <th>
                "Id"
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
<div class="pt-5">
    <a asp-action="Create" asp-controller="Restaurant" class="btn btn-secondary">Добавить новый ресторан</a>
</div>
